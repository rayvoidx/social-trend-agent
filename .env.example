# =============================================================================
# Social Trend Agent - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
LLM_PROVIDER=openai

# OpenAI API Key를 여기에 입력하세요

# --- OpenAI ---
OPENAI_API_KEY=sk-your-openai-api-key 
OPENAI_MODEL_NAME=gpt-5.1             # [OPTIONAL] default: gpt-4o

# --- Anthropic Claude ---
ANTHROPIC_API_KEY=                       # [REQUIRED if LLM_PROVIDER=anthropic]
ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20241022

# --- Google Gemini ---
GEMINI_API_KEY=your-google-gemini-api-key  # [REQUIRED if LLM_PROVIDER=google]
GEMINI_MODEL_NAME=gemini-1.5-pro

# MCP API
SUPADATA_API_KEY=your-supadata-api-key
BRAVE_API_KEY=your-brave-api-key
SERPAPI_API_KEY=your-serpapi-api-key

# LLM 모델 설정
# gpt-4o: 기본 모델 (동적 추론/비추론 선택 지원)
# gpt-4o-mini: 빠른 응답용 모델
DEFAULT_LLM_MODEL=gpt-5.1
FAST_LLM_MODEL=gpt-5-mini
FALLBACK_LLM_MODEL=gpt-5-mini

# 임베딩 모델
EMBEDDING_MODEL_NAME=text-embedding-3-large

# 프롬프트 설정
PROMPT_CONFIG_PATH=./prompts.yaml
PROMPT_DEFAULT_VERSION=v1
PROMPT_AB_TEST_ENABLED=false

# 데이터베이스/캐시
DATABASE_URL=postgresql://user:password@localhost:5432/social_trend_db
REDIS_URL=redis://localhost:6379

# 벡터DB(Pinecone) 설정
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=documents

# 유튜브 API 설정
YOUTUBE_API_KEY=

# 재순위화/쿼리 확장(운영 튜닝용)
RERANKER_THRESHOLD=0.0
QUERY_EXPANSION_ENABLED=false

# Langfuse(선택: LLM/에이전트 추적)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=

# CORS 허용 오리진(운영 필수)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# JWT Secret Key (인증 미들웨어용)
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars

# 인증 설정 (개발 환경에서는 false로 설정)
ENABLE_AUTH=false

# -----------------------------------------------------------------------------
# 기타 설정
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
DEBUG=false
FORCE_SAMPLE_DATA=false

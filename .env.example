# ============================================================================
# LLM Configuration (Cloud-Neutral)
# ============================================================================
# Choose one: azure_openai, openai, anthropic, google, ollama
LLM_PROVIDER=azure_openai

# Azure OpenAI (Default Provider)
OPENAI_API_TYPE=azure
OPENAI_API_BASE=https://your-resource.openai.azure.com/
OPENAI_API_KEY=your-azure-openai-api-key-here
OPENAI_API_VERSION=2024-02-15-preview
OPENAI_DEPLOYMENT_NAME=gpt-4
OPENAI_MODEL_NAME=gpt-4

# OpenAI (Alternative)
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_MODEL_NAME=gpt-4-turbo-preview

# Anthropic Claude (Alternative)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL_NAME=claude-3-opus-20240229

# Google Gemini (Alternative)
# GOOGLE_API_KEY=your-google-api-key-here
# GOOGLE_MODEL_NAME=gemini-pro

# Ollama (Local, Alternative)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL_NAME=llama2

# ============================================================================
# Data Sources (Optional - will use sample data if not provided)
# ============================================================================
# News APIs
NEWS_API_KEY=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Video Platforms
YOUTUBE_API_KEY=
TIKTOK_CONNECTOR_TOKEN=

# Additional Data Sources
TAVILY_API_KEY=

# ============================================================================
# Notifications (Optional)
# ============================================================================
SLACK_WEBHOOK_URL=
N8N_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ============================================================================
# Cache & Storage (Optional)
# ============================================================================
CACHE_DIR=.cache/agents
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Agent Configuration
# ============================================================================
# Retry settings
MAX_RETRIES=5
BACKOFF_FACTOR=1.0

# Rate limiting
RATE_LIMIT_CALLS_PER_SECOND=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# MCP (Model Context Protocol) Configuration
# ============================================================================
MCP_CONFIG_PATH=automation/mcp/mcp_config.json

# ============================================================================
# Open WebUI Integration (Optional)
# ============================================================================
WEBUI_SECRET_KEY=
WEBUI_JWT_SECRET_KEY=

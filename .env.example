# =============================================================================
# AI Trend Analysis Agent - Environment Configuration
# =============================================================================
# 이 파일을 복사하여 .env 파일을 생성하고, API 키를 입력하세요.
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration (필수)
# -----------------------------------------------------------------------------
# OpenAI를 기본 LLM으로 사용합니다.
LLM_PROVIDER=openai

# OpenAI API Key (필수)
# https://platform.openai.com/api-keys 에서 발급
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model (선택사항, 기본값: gpt-4o)
# 사용 가능한 모델: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo
OPENAI_MODEL_NAME=gpt-4o

# -----------------------------------------------------------------------------
# 다른 LLM 제공자 (선택사항)
# -----------------------------------------------------------------------------
# LLM_PROVIDER를 변경하면 해당 제공자 사용

# Azure OpenAI (기업용)
# OPENAI_API_TYPE=azure
# OPENAI_API_BASE=https://your-resource.openai.azure.com/
# OPENAI_API_KEY=your-azure-key
# OPENAI_API_VERSION=2024-02-15-preview
# OPENAI_DEPLOYMENT_NAME=gpt-4
# OPENAI_MODEL_NAME=gpt-4

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-key
# ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20241022

# Google Gemini
# GOOGLE_API_KEY=your-google-key
# GOOGLE_MODEL_NAME=gemini-1.5-pro

# Ollama (로컬 LLM, API 키 불필요)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL_NAME=llama3.2

# -----------------------------------------------------------------------------
# News Data Sources (선택사항 - 없으면 샘플 데이터 사용)
# -----------------------------------------------------------------------------
# NewsAPI.org (영문 뉴스)
# https://newsapi.org/account 에서 발급
NEWS_API_KEY=

# Naver News API (한국 뉴스)
# https://developers.naver.com/apps/ 에서 발급
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Video Platform APIs (선택사항 - viral_video_agent용)
# -----------------------------------------------------------------------------
# YouTube Data API v3
# https://console.cloud.google.com/ 에서 발급
YOUTUBE_API_KEY=

# TikTok Research API
TIKTOK_CONNECTOR_TOKEN=

# Instagram Graph API
INSTAGRAM_CONNECTOR_TOKEN=

# -----------------------------------------------------------------------------
# Web Search APIs (선택사항 - 추가 데이터 수집용)
# -----------------------------------------------------------------------------
# Tavily Search API
# https://tavily.com/ 에서 발급
TAVILY_API_KEY=

# Brave Search API (MCP 연동용)
# https://brave.com/search/api/ 에서 발급
BRAVE_API_KEY=

# -----------------------------------------------------------------------------
# MCP (Model Context Protocol) Keys (선택사항)
# -----------------------------------------------------------------------------
# MCP 서버에서 사용하는 외부 서비스 API 키

# Brave Search (MCP 웹 검색용)
# BRAVE_API_KEY=your-brave-api-key

# PostgreSQL (MCP 데이터베이스용)
# DATABASE_URL=postgresql://user:password@localhost:5432/trend_db

# -----------------------------------------------------------------------------
# Notification & Automation (선택사항)
# -----------------------------------------------------------------------------
# Slack Webhook (알림 전송)
# https://api.slack.com/messaging/webhooks 에서 발급
SLACK_WEBHOOK_URL=

# n8n Webhook (자동화 워크플로우)
N8N_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# API Server Configuration (선택사항 - FastAPI 대시보드용)
# -----------------------------------------------------------------------------
# API 서버 포트
API_PORT=8000

# CORS 허용 도메인 (쉼표로 구분)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Logging & Monitoring (선택사항)
# -----------------------------------------------------------------------------
# 로그 레벨: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 로그 파일 경로
LOG_FILE=logs/agent.log

# -----------------------------------------------------------------------------
# Performance Tuning (선택사항)
# -----------------------------------------------------------------------------
# 최대 동시 워커 수 (분산 실행용)
MAX_WORKERS=4

# API 요청 타임아웃 (초)
API_TIMEOUT=30

# 캐시 TTL (초)
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Development & Testing (개발용)
# -----------------------------------------------------------------------------
# 디버그 모드 활성화
DEBUG=false

# 샘플 데이터 강제 사용 (API 키 무시)
FORCE_SAMPLE_DATA=false

# =============================================================================
# 빠른 시작 가이드
# =============================================================================
# 
# 1. 최소 설정 (OpenAI만):
#    - OPENAI_API_KEY만 설정
#    - 나머지는 샘플 데이터로 동작
#
# 2. 실행:
#    python main.py --agent news_trend_agent --query "AI" --window 7d
#
# 3. MCP 연동 (Claude Desktop):
#    - automation/mcp/mcp_server.py 실행
#    - BRAVE_API_KEY 설정 (선택사항)
#
# =============================================================================

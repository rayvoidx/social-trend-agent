# =============================================================================
# Social Trend Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys:
#   cp env.template .env
#
# At minimum, configure ONE LLM provider (OpenAI recommended for PoC).
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Providers (configure at least one)
# -----------------------------------------------------------------------------

# OpenAI (default, recommended)
OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-4o

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=

# Google Gemini (optional)
GOOGLE_API_KEY=

# Ollama local (optional)
OLLAMA_BASE_URL=

# -----------------------------------------------------------------------------
# MCP Tools (optional - enhances data collection)
# -----------------------------------------------------------------------------

# Brave Search API - https://brave.com/search/api/
BRAVE_API_KEY=

# Supadata API (YouTube transcript extraction)
SUPADATA_API_KEY=

# YouTube Data API v3
YOUTUBE_API_KEY=

# -----------------------------------------------------------------------------
# Infrastructure (optional - defaults work for development)
# -----------------------------------------------------------------------------

# Redis (defaults to localhost:6379, graceful fallback if unavailable)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Pinecone Vector DB (optional)
PINECONE_API_KEY=
PINECONE_INDEX_NAME=social-trend-agent

# Voyage AI Embeddings (optional)
VOYAGE_API_KEY=

# -----------------------------------------------------------------------------
# Notifications (optional)
# -----------------------------------------------------------------------------

# Slack webhook for agent notifications
SLACK_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API server port
API_PORT=8000

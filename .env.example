# -----------------------------------------------------------------------------
# social-trend-agent ENV TEMPLATE
# -----------------------------------------------------------------------------
# Copy to .env and fill in values.
#
#   cp .env.example .env
#
# IMPORTANT:
# - Do NOT commit real secrets.
# - MCP-only 수집 모드에서 SNS 데이터는 Supadata MCP를 통해서만 수집됩니다.
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Core runtime
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LLM_PROVIDER=openai              # openai | anthropic | google | azure | ollama

# -----------------------------------------------------------------------------
# Supadata MCP (SNS 수집 단일 진입점)
# -----------------------------------------------------------------------------
SUPADATA_API_KEY=                # Supadata 콘솔에서 발급

# MCP 서버 이름 (src/integrations/mcp/mcp_config.json에 등록된 이름)
SUPADATA_MCP_SERVER=supadata-ai-mcp

# Supadata MCP에서 제공하는 실제 tool name으로 맞춰주세요.
SUPADATA_X_TOOL=x_search
SUPADATA_TIKTOK_TOOL=tiktok_search
SUPADATA_YOUTUBE_TOOL=youtube_trending

# -----------------------------------------------------------------------------
# News/Web search MCP (news_trend_agent에서 사용)
# -----------------------------------------------------------------------------
BRAVE_API_KEY=                   # Brave Search API key (선택이지만 news_trend_agent에 권장)
SERPAPI_API_KEY=                 # SerpAPI key (선택)

# -----------------------------------------------------------------------------
# LLM providers
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-5.2
EMBEDDING_MODEL_NAME=text-embedding-3-large

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_NAME=claude-sonnet-4-5

GOOGLE_API_KEY=
GOOGLE_MODEL_NAME=gemini-3-pro

# LLM 모델 설정
DEFAULT_LLM_MODEL=gpt-5.2
FAST_LLM_MODEL=gpt-5-mini
FALLBACK_LLM_MODEL=gpt-5-mini

# -----------------------------------------------------------------------------
# Vector DB (RAG)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=social-trend-index

# -----------------------------------------------------------------------------
# 데이터베이스/캐시
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/social_trend_db
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# 유튜브 API 설정
# -----------------------------------------------------------------------------
YOUTUBE_API_KEY=

# -----------------------------------------------------------------------------
# 프롬프트 설정
# -----------------------------------------------------------------------------
PROMPT_CONFIG_PATH=./prompts.yaml
PROMPT_DEFAULT_VERSION=v1
PROMPT_AB_TEST_ENABLED=false

# -----------------------------------------------------------------------------
# 재순위화/쿼리 확장(운영 튜닝용)
# -----------------------------------------------------------------------------
RERANKER_THRESHOLD=0.0
QUERY_EXPANSION_ENABLED=false

# -----------------------------------------------------------------------------
# Langfuse(선택: LLM/에이전트 추적)
# -----------------------------------------------------------------------------
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=

# -----------------------------------------------------------------------------
# CORS / 인증 설정
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ENABLE_AUTH=false

# ============================================
# Slack MCP 설정
# ============================================
# Slack App 생성 후 Bot User OAuth Token 입력
# https://api.slack.com/apps 에서 생성
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Slack Workspace의 Team ID
# Slack 웹에서 확인: 워크스페이스 설정 > 일반 > Team ID
SLACK_TEAM_ID=T0123456789

# 알림을 받을 채널명 (# 제외)
SLACK_CHANNEL=dev-notifications

# ============================================
# GitHub MCP 설정
# ============================================
# GitHub Personal Access Token
# https://github.com/settings/tokens 에서 생성
# 필요 권한: repo, workflow
GITHUB_TOKEN=ghp_your-personal-access-token-here

# ============================================
# 기존 프로젝트 설정
# ============================================
NODE_ENV=development
PYTEST_ARGS=--cov=src --cov-report=term-missing

# Redis (기존 설정 유지)
REDIS_URL=redis://localhost:6379

# API 설정 (기존 설정 유지)
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# 기타 설정
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
DEBUG=false
FORCE_SAMPLE_DATA=false
